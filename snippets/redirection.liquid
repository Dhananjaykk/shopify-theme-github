    }
    #RedirectionModal {
      visibility: visible;
      pointer-events: none;
    }
    @media (min-width: 768px) {
      #RedirectionPopup .modal-content {
        -webkit-box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
      }
