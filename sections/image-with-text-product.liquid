 {% unless product.metafields["custom_fields"]["custom-image-with-text"] != blank %}
{% if product.metafields["custom_fields"]["single-fabric-image"] != blank %}
    <section class="section">
      <div>
         {% for item in product.metafields["custom_fields"]["single-fabric-image"] %}
            <div class="custom-fabricimage">
              <div class="desktopfabricimg">
              {{ item["desktop_image"] }}
              </div>
              <div class="mobilefabricimg">
               {{ item["mobile_image"] }}
              </div>
                {% if item["content"] == blank %}
        
  {% if producttag contains "cotton23" or producttag contains "cotton" %}
                      <div class="fabricblock">
                        <img src="https://cdn.shopify.com/s/files/1/0088/4031/4931/files/SupimaLogo.png?v=1678428125">
                    <ul>
                       <li>Softest & strongest mul cottons that are soft on your skin & the earth</li>
                    </ul>
                      </div>
                    {% endif %}
                  {% elsif item["content"] == blank %}
              <div class="fabricimg_content"> {{ item["content"] }}
    </div>
                  {% endif %}
            </div>
        {% endfor %}
      </div>
    
      
    </section>
    <style>
        .custom-fabricimage{
            position:relative;
        }
      .mobilefabricimg{
        display:none
    }
    .fabricimg_content{
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translateX(-50%) translateY(-50%);
        transform: translateX(-50%) translateY(-50%);
        width: 40%;
        background: #fcf7f0;
    text-align: center;
    padding: 18px;
    }
      @media only screen and (max-width: 768px) {
     .desktopfabricimg{
    display:none
}
.mobilefabricimg{
    display:block
}
.fabricimg_content{
    width: 80%;
}
      }
    </style>
{% endif %}
   {% endunless %}
    {% schema %}
      {
        "name": "image-with-text-product",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Heading"
              }
        ],
      "presets": [
        {
          "name": "image-with-text-product",
          "settings": {}
        }
      ]
      }
      {% endschema %}