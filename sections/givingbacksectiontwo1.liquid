    <script>
      if (screen.width < 768) {
      var btnText11 = document.querySelector(".myBtn11_{{ section.id }}");
      
        btnText11.addEventListener('click', function() { 
          var dots11 = document.querySelector(".cdots11");
          var moreText11 = document.querySelector(".cmore11");
          
           if (dots11.style.display === "none") {
            btnText11.innerHTML = "Read More"; 
            dots11.style.display = "inline";
            moreText11.style.display = "none";
      } else {
            dots11.style.display = "none";
            btnText11.innerHTML = "Read Less"; 
            moreText11.style.display = "inline";
      }
        });}
    </script>
    
    
