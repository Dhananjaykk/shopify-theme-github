    <div class="container">
    <div class="givingbacksectiontwo" id="{{ section.settings.c_section_id }}">
      <h3 class="heading h2 givingback" style="text-align: center;margin-bottom: 25px;">{{ section.settings.heading | escape }}</h3>
      <div class="givingbckmain">
        <div class="givingbck_content">
          <p class="givingbck_inner_content">{{ section.settings.headingbelowtext }}</p>
           <button class="myBtn11_{{ section.id }}" style="font-size: 18px; font-weight: 600;">Read more</button>
        </div>
        <div class="givingback_mainbannersec">
          <img src="{{ section.settings.image | img_url : 'master' }}" style="width: 100%;">
        </div>
        <div class="givingbck_main_content">
          <div class="givingbck_img_main_cont">
            <div class="igvimgmain">
            {% for block in section.blocks %}
              <div class="givingbck_img_main_cont_inn">
              <img src="{{ block.settings.imageblock | img_url : 'master' }}"></div>
            {% endfor %}
          </div></div>
          <div class="givingbck_content_main_cont givingm_{{ section.id }}">
            {% if  section.settings.maincontentheading != blank  %}
            <h3 class="article-item__title heading h4">{{ section.settings.maincontentheading }}</h3>{% endif %}
            <div>
            <p class="givbck_mn_inn_txt">{{ section.settings.maincontent }}</p>
            <button class="myBtn1_{{ section.id }}" style="font-size: 18px; font-weight: 600;">Read more</button>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
