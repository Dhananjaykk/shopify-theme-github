    "blocks": [
     {
       "name": "location",
       "type": "location",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         }, {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },  {
      "type": "text",
      "id": "address",
      "label": "Address"
    }, {
      "type": "text",
      "id": "phone",
      "label": "Phone"
    },{
      "type": "url",
      "id": "url",
      "label": "Map url"
    }, {
      "type": "text",
      "id": "store-info-day",
      "label": "store-info-day"
    }, {
      "type": "text",
