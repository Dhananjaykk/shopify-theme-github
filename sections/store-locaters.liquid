<section class="section">
  <div class="container ">
    <header class="section__header text-container"><h3 class="heading h2">{{ section.settings.title }}</h3></header>
    
    <div class="store_locator">
      {% for block in section.blocks %}
      <div class="store_item">
        <div class="store_image">
          <img src="{{ block.settings.image| img_url: 'master' }}">
        </div>
        <div class="store_data">
            <h4 class="Heading u-h2">{{ block.settings.heading }}</h4>
          <p class="address-text">{{ block.settings.address }} </p>
      	<p class="phone-text">{{ block.settings.phone }}</p>
      	<a class="store-info-cta" href="{{ block.settings.url }}">GET DIRECTIONS</a>
      	<p class="store-info-day">{{ block.settings.store-info-day }}</p> 
      	<p class="store-info-time">{{ block.settings.store-info-time }}</p> 
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
<style>
  .store_locator {
      display: flex;
    grid-template-columns: auto auto auto;
    flex-wrap: wrap;
    justify-content: center;
    column-gap: 15px;
    text-align:center;
}
  .store_item{
    width:32.33%;
  }
 
  .store_data{
        background: #fff;
     justify-self: center;
    margin-bottom:50px;
        padding: 15px;
}
  .store_data a{
    border: 1px solid;
    padding: 7px 15px;
    border-radius: 3px;
    background: black;
    color: #fff;
    letter-spacing: 1px;
  }

  @media only screen and (max-width: 600px) {
    .store_item{
      width:100%;
    }
  }
</style>
