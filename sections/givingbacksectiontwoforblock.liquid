          },
          {
            "type": "html",
            "id": "headingbelowtext",
            "label":"Heading Below text"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label":"Main Banner"
          },
          {
            "type": "text",
            "id": "maincontentheading",
            "label":"Below Heading"
          },
           {
            "type": "html",
            "id": "maincontent",
            "label":"Below Content"
          },
            {
            "type": "image_picker",
            "id": "imageblock1",
            "label":"Image Block1"
          }   
          ]}
    ],  
        "presets": [
        {
